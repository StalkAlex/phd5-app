{
    "name": "dmstr/phd5-app",
    "minimum-stability": "beta",
    "require": {
        "wikimedia/composer-merge-plugin": "~1.3.1"
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        },
        "merge-plugin": {
            "require": [
                "composer.phd5.json"
            ]
        }
    },
    "config": {
        "preferred-install": {
            "dmstr/*": "source",
            "hrzg/*": "source",
            "schmunk42/*": "source",
            "*": "auto"
        },
        "fxp-asset": {
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)"
        }
    }
}
